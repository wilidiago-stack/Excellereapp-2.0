rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      // Development mode: Allow all authenticated users to read and write all data.
      // WARNING: This is insecure and should NOT be used in production.
      // We will revert to secure, role-based rules once development of modules is complete.
      allow read, write: if request.auth != null;
    }
  }
}
