rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- HELPER FUNCTIONS ---

    function isSignedIn() {
      return request.auth != null;
    }

    // Robust Admin validation targeting the user's primary email
    function isAdmin() {
      return isSignedIn() && (
        request.auth.token.email.lower() == 'andres.diago@outlook.com' || 
        (request.auth.token.role != null && request.auth.token.role == 'admin')
      );
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // --- COLLECTION RULES ---

    match /time_entries/{entryId} {
      // Allow list and get for Admin or the data owner
      allow read, list: if isSignedIn() && (isAdmin() || resource.data.userId == request.auth.uid);
      
      // Allow creation and updates if Admin or if the entry belongs to the user
      allow create: if isSignedIn() && (request.resource.data.userId == request.auth.uid || isAdmin());
      allow update, delete: if isSignedIn() && (isAdmin() || resource.data.userId == request.auth.uid);
    }

    match /projects/{projectId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /users/{userId} {
      allow read: if isSignedIn();
      allow write: if isAdmin() || isOwner(userId);
    }

    match /contractors/{contractorId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /dailyReports/{reportId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update, delete: if isAdmin() || (isSignedIn() && request.auth.uid == resource.data.authorId);
    }

    match /monthlyReports/{reportId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update, delete: if isAdmin() || (isSignedIn() && request.auth.uid == resource.data.authorId);
    }

    match /system/metadata {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    // Catch-all for other collections: Full access for Admins only
    match /{document=**} {
      allow read, write: if isAdmin();
    }
  }
}
