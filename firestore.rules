rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * EXCELLERE REVIVE - FIRESTORE SECURITY RULES
     * 
     * Implementa RBAC (Role-Based Access Control) con independencia de autorización.
     */

    // --- Funciones de Ayuda ---

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /** 
     * Verifica privilegios administrativos.
     * Basado en la colección denormalizada para rendimiento óptimo.
     */
    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/system_roles_admin/$(request.auth.uid));
    }

    // --- Reglas de Colecciones ---

    /** Datos del sistema - Estadísticas del Dashboard */
    match /system/metadata {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    /** Perfiles de Usuario */
    match /users/{userId} {
      allow get: if isOwner(userId) || isAdmin();
      allow list: if isAdmin(); // Solo admins pueden ver la lista completa
      
      allow create: if (isOwner(userId) && request.resource.data.id == userId) || isAdmin();
      allow update: if (isOwner(userId) || isAdmin());
      allow delete: if isAdmin();
    }

    /** Proyectos, Contratistas y Reportes */
    match /projects/{id} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
    
    match /contractors/{id} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
    
    match /dailyReports/{id} {
      allow read: if isSignedIn();
      allow create, update: if isSignedIn();
      allow delete: if isAdmin();
    }
    
    match /monthlyReports/{id} {
      allow read: if isSignedIn();
      allow create, update: if isSignedIn();
      allow delete: if isAdmin();
    }

    /** Roles y Módulos (Datos de Referencia) */
    match /roles/{id} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /modules/{id} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    /** Marcadores de Seguridad (Admin Lookup) */
    match /system_roles_admin/{adminUid} {
      allow get, list: if isSignedIn();
      allow write: if isAdmin();
    }
  }
}