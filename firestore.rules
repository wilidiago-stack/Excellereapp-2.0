rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      // Development mode: Allow all reads and writes from any client.
      // WARNING: This is completely insecure and MUST NOT be used in production.
      // This is a temporary measure to unblock development. We will re-implement
      // proper, role-based security rules later.
      allow read, write;
    }
  }
}
