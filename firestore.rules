
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- HELPER FUNCTIONS ---

    function isSignedIn() {
      return request.auth != null;
    }

    // REDUNDANT ADMIN VALIDATION: Priority access for developer and admin roles
    function isAdmin() {
      return isSignedIn() && (
        request.auth.token.email.lower() == "andres.diago@outlook.com" || 
        request.auth.uid == "aPu3ZeoGaCY6MDxPk9wFFqwDZU33" ||
        (request.auth.token.role != null && request.auth.token.role == "admin")
      );
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Check if a weekly period is locked (submitted or approved)
    function isPeriodLocked(userId, weekId) {
      let submission = get(/databases/$(database)/documents/weekly_submissions/$(userId + "_" + weekId));
      return submission != null && submission.data.status != "draft";
    }

    // --- COLLECTION RULES ---

    match /time_entries/{entryId} {
      allow read, list: if isAdmin() || (isSignedIn() && (resource == null || resource.data.userId == request.auth.uid));
      
      // Prevention: Users can't create or edit entries if the week is already submitted/approved
      // Extracting YYYY-WW from date is complex in rules, so we rely on client-side lock + admin review.
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAdmin() || (isSignedIn() && resource.data.userId == request.auth.uid);
    }

    match /weekly_submissions/{submissionId} {
      allow read: if isSignedIn() && (isAdmin() || submissionId.startsWith(request.auth.uid));
      allow create, update: if isSignedIn() && (isAdmin() || submissionId.startsWith(request.auth.uid));
    }

    match /projects/{projectId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /users/{userId} {
      allow read: if isSignedIn();
      allow write: if isAdmin() || isOwner(userId);
    }

    match /contractors/{contractorId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /system/metadata {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /{document=**} {
      allow read, write: if isAdmin();
    }
  }
}
