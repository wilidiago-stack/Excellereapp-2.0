rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // /users collection
    // The role is checked from the user's authentication token.
    match /users/{userId} {
      // Create: A user can create their own document during sign-up, or an admin can create any user.
      allow create: if request.auth.uid == userId || request.auth.token.role == 'admin';
      
      // Read (Single Doc): A user can read their own profile, or an admin can read any profile.
      allow get: if request.auth.uid == userId || request.auth.token.role == 'admin';
      
      // Read (Multiple Docs): Only admins can list all users.
      allow list: if request.auth.token.role == 'admin';
      
      // Update: A user can update their own doc (but not their role), or an admin can update anything.
      allow update: if (request.auth.uid == userId && request.resource.data.role == resource.data.role) || request.auth.token.role == 'admin';
      
      // Delete: Only admins can delete users.
      allow delete: if request.auth.token.role == 'admin';
    }

    // /projects collection
    match /projects/{projectId} {
      // Read: Any user with a valid role can read project data.
      allow get, list: if request.auth.token.role in ['admin', 'project_manager', 'viewer'];
      
      // Write: Only Admins and Project Managers can manage projects.
      allow create, update, delete: if request.auth.token.role in ['admin', 'project_manager'];
    }

    // /contractors collection
    match /contractors/{contractorId} {
      // Read: Any user with a valid role can read contractor data.
      allow get, list: if request.auth.token.role in ['admin', 'project_manager', 'viewer'];
      
      // Write: Only Admins and Project Managers can manage contractors.
      allow create, update, delete: if request.auth.token.role in ['admin', 'project_manager'];
    }

    // /dailyReports collection
    match /dailyReports/{reportId} {
      // Read: Any user with a valid role can read reports.
      allow get, list: if request.auth.token.role in ['admin', 'project_manager', 'viewer'];
      
      // Write: Only Admins and Project Managers can manage reports.
      allow create, update, delete: if request.auth.token.role in ['admin', 'project_manager'];
    }
    
    // /monthlyReports collection
    match /monthlyReports/{reportId} {
       // Read: Any user with a valid role can read reports.
       allow get, list: if request.auth.token.role in ['admin', 'project_manager', 'viewer'];

       // Write: Only Admins and Project Managers can manage reports.
       allow create, update, delete: if request.auth.token.role in ['admin', 'project_manager'];
    }

    // /system collection
    match /system/{docId} {
      // Read: Any authenticated user can read system metadata.
      allow get: if request.auth != null && request.auth.token.role in ['admin', 'project_manager', 'viewer'];
      
      // Write: No client can write to system metadata. This should only be handled by backend functions.
      allow write: if false;
    }
  }
}
