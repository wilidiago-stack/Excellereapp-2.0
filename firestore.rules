rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- BULLETPROOF ADMIN VALIDATION ---
    // This is the single source of truth for admin access.
    // We prioritize the developer's specific email and UID for instant access.
    function isAdmin() {
      return request.auth != null && (
        request.auth.token.email.lower() == "andres.diago@outlook.com" || 
        request.auth.uid == "aPu3ZeoGaCY6MDxPk9wFFqwDZU33" ||
        request.auth.token.role == "admin"
      );
    }

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // --- COLLECTION RULES ---

    match /time_entries/{entryId} {
      // Admins can list and get everything. 
      // Owners can only see their own via filtered queries.
      allow read: if isSignedIn() && (isAdmin() || resource.data.userId == request.auth.uid);
      
      // Strict write permissions
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isSignedIn() && (isAdmin() || resource.data.userId == request.auth.uid);
    }

    match /weekly_submissions/{submissionId} {
      allow read: if isSignedIn() && (isAdmin() || submissionId.startsWith(request.auth.uid));
      allow create, update: if isSignedIn() && (isAdmin() || submissionId.startsWith(request.auth.uid));
    }

    match /projects/{projectId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /users/{userId} {
      allow read: if isSignedIn();
      allow write: if isAdmin() || isOwner(userId);
    }

    match /contractors/{contractorId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /system/metadata {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    // Global fallback for Admin supreme access
    match /{document=**} {
      allow read, write: if isAdmin();
    }
  }
}
// Force Deployment: 2024-05-24 Security Rules Hardened for Developer Access