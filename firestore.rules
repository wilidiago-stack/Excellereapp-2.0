rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * EXCELLERE REVIVE - SEGURIDAD FIRESTORE-FIRST
     * La fuente de verdad absoluta es el documento del usuario en la colección /users.
     */

    function isSignedIn() {
      return request.auth != null;
    }

    /** 
     * CONSULTA DIRECTA A LA BASE DE DATOS:
     * Verifica el rol 'admin' directamente en el documento de Firestore.
     * Esto garantiza que los cambios de rol manuales tengan efecto inmediato
     * e independiente del método de inicio de sesión (Google, MS, etc).
     */
    function isAdmin() {
      return isSignedIn() && (
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' ||
        exists(/databases/$(database)/documents/system_roles_admin/$(request.auth.uid))
      );
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /** Metadatos del sistema (Estadísticas del Dashboard) */
    match /system/metadata {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    /** Perfiles de Usuario */
    match /users/{userId} {
      allow get: if isSignedIn();
      allow list: if isAdmin();
      allow create: if isSignedIn();
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();
    }

    /** Proyectos */
    match /projects/{id} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
    
    /** Contratistas */
    match /contractors/{id} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
    
    /** Reportes */
    match /dailyReports/{id} {
      allow read: if isSignedIn();
      allow create, update: if isSignedIn();
      allow delete: if isAdmin();
    }
    
    match /monthlyReports/{id} {
      allow read: if isSignedIn();
      allow create, update: if isSignedIn();
      allow delete: if isAdmin();
    }

    /** Marcadores de Seguridad */
    match /system_roles_admin/{adminUid} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    /** Roles y Módulos */
    match /roles/{id} { allow read: if isSignedIn(); allow write: if isAdmin(); }
    match /modules/{id} { allow read: if isSignedIn(); allow write: if isAdmin(); }
  }
}