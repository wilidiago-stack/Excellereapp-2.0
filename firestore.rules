rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Development rule: Allow any authenticated user full access.
    // This ensures that as long as you are logged in, you can read and write.
    // We will replace this with stricter, role-based rules for production.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
