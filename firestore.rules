rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    function isAdmin() {
      return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    match /users/{userId} {
      // READ: Any authenticated user can list and view user profiles for now.
      // This is to unblock development. A more secure rule would be to check for specific roles.
      allow list, get: if request.auth != null;

      // CREATE: An admin can invite/create users. A user can also create their own profile during sign-up.
      // The `isOwner` check ensures the document ID matches the user's UID.
      allow create: if isAdmin() || isOwner(userId);

      // UPDATE: An admin can update any user. A user can only update their own profile.
      allow update: if isAdmin() || isOwner(userId);
      
      // DELETE: Only admins can delete users.
      allow delete: if isAdmin();
    }

    match /projects/{projectId} {
      // Only authenticated users can interact with projects for now
      allow read, write: if request.auth != null;
    }

    match /contractors/{contractorId} {
      allow read, write: if request.auth != null;
    }

    match /projects/{projectId}/dailyReports/{reportId} {
      allow read, write: if request.auth != null;
    }

    match /projects/{projectId}/monthlyReports/{reportId} {
      allow read, write: if request.auth != null;
    }
  }
}
