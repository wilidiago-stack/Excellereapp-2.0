rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * EXCELLERE REVIVE - SECURITY RULES
     * 
     * Core Philosophy:
     * - Authorization Independence: User-specific data is keyed by UID.
     * - DBAC (Database-Backed Access Control): Admin status via /roles_admin.
     */

    // --- GLOBAL HELPER FUNCTIONS ---

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    function isExistingOwner(userId) {
      return resource != null && isOwner(userId);
    }

    // --- COLLECTION RULES ---

    /**
     * @description User profile documents.
     */
    match /users/{userId} {
      allow get: if isOwner(userId) || isAdmin();
      allow update: if isOwner(userId) || isAdmin();
      allow list, create: if isAdmin();
    }

    /**
     * @description Global definitions of application modules.
     */
    match /modules/{moduleId} {
      allow get, list: if isSignedIn();
      allow create: if isAdmin();
      allow update, delete: if isAdmin();
    }

    /**
     * @description User-specific module access records.
     */
    match /users/{userId}/moduleAccess/{userModuleAccessId} {
      allow get, list: if isOwner(userId) || isAdmin();
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
      allow delete: if isExistingOwner(userId) || isAdmin();
    }

    /**
     * @description Administrative roles (DBAC).
     */
    match /roles_admin/{adminId} {
      allow get: if isSignedIn();
      allow write: if false; // Managed via Console or Admin SDK
    }

    /**
     * @description Projects and their subcollections.
     */
    match /projects/{projectId} {
      allow get, list: if isSignedIn();
      allow create, update, delete: if isAdmin();
      
      match /documents/{docId} {
        allow read: if isSignedIn();
        allow write, delete: if isAdmin();
      }
      
      match /quick_links/{linkId} {
        allow get, list: if isSignedIn();
        allow create, update, delete: if isAdmin();
      }
    }

    /**
     * @description Operational logs (Daily, Monthly, Safety).
     */
    match /dailyReports/{reportId} {
      allow get, list: if isSignedIn();
      allow create, update: if isSignedIn();
      allow delete: if isAdmin();
    }

    match /monthlyReports/{reportId} {
      allow get, list: if isSignedIn();
      allow create, update: if isSignedIn();
      allow delete: if isAdmin();
    }

    match /safetyEvents/{eventId} {
      allow get, list: if isSignedIn();
      allow create, update: if isSignedIn();
      allow delete: if isAdmin();
    }

    /**
     * @description Time tracking system.
     */
    match /time_entries/{entryId} {
      allow get, list: if isSignedIn() && (resource.data.userId == request.auth.uid || isAdmin());
      allow create, update: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow delete: if isAdmin();
    }

    match /weekly_submissions/{subId} {
      allow get, list: if isSignedIn() && (resource.data.userId == request.auth.uid || isAdmin());
      allow create, update: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow delete: if isAdmin();
    }

    /**
     * @description Calendar notes.
     */
    match /calendar_notes/{noteId} {
      allow get, list: if isSignedIn();
      allow create, update: if isSignedIn();
      allow delete: if isAdmin();
    }

    /**
     * @description Global system metadata.
     */
    match /system/metadata {
      allow get: if isSignedIn();
      allow write: if false;
    }
  }
}