rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    // Default-deny all access
    match /{document=**} {
      allow read, write: if false;
    }

    // /users collection
    match /users/{userId} {
      allow create: if (request.auth.uid == userId) || (isSignedIn() && request.auth.token.role == 'admin');
      allow get: if request.auth.uid == userId || (isSignedIn() && request.auth.token.role == 'admin');
      allow list: if isSignedIn() && request.auth.token.role == 'admin';
      allow update: if (request.auth.uid == userId && request.resource.data.role == resource.data.role) || (isSignedIn() && request.auth.token.role == 'admin');
      allow delete: if isSignedIn() && request.auth.token.role == 'admin';
    }

    // /projects collection
    match /projects/{projectId} {
      allow get, list: if isSignedIn() && request.auth.token.role in {'admin': true, 'project_manager': true, 'viewer': true};
      allow create, update, delete: if isSignedIn() && request.auth.token.role in {'admin': true, 'project_manager': true};
    }

    // /contractors collection
    match /contractors/{contractorId} {
      allow get, list: if isSignedIn() && request.auth.token.role in {'admin': true, 'project_manager': true, 'viewer': true};
      allow create, update, delete: if isSignedIn() && request.auth.token.role in {'admin': true, 'project_manager': true};
    }

    // /dailyReports collection
    match /dailyReports/{reportId} {
      allow get, list: if isSignedIn() && request.auth.token.role in {'admin': true, 'project_manager': true, 'viewer': true};
      allow create, update, delete: if isSignedIn() && request.auth.token.role in {'admin': true, 'project_manager': true};
    }
    
    // /monthlyReports collection
    match /monthlyReports/{reportId} {
       allow get, list: if isSignedIn() && request.auth.token.role in {'admin': true, 'project_manager': true, 'viewer': true};
       allow create, update, delete: if isSignedIn() && request.auth.token.role in {'admin': true, 'project_manager': true};
    }

    // /system collection
    match /system/{docId} {
      allow get: if isSignedIn() && request.auth.token.role in {'admin': true, 'project_manager': true, 'viewer': true};
      allow write: if false;
    }
  }
}
