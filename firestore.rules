rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- HELPER FUNCTIONS ---

    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && (
        request.auth.token.role == 'admin' || 
        request.auth.token.email == 'andres.diago@outlook.com'
      );
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // --- COLLECTION RULES ---

    match /time_entries/{entryId} {
      // Allow reading if the user is an admin OR if the document belongs to them.
      // Firestore rules for queries: if isAdmin() is true, collection-wide lists are allowed.
      allow read: if isSignedIn() && (isAdmin() || resource.data.userId == request.auth.uid);
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isSignedIn() && (isAdmin() || resource.data.userId == request.auth.uid);
    }

    match /projects/{projectId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /users/{userId} {
      allow read: if isSignedIn();
      allow write: if isAdmin() || isOwner(userId);
    }

    match /contractors/{contractorId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /dailyReports/{reportId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update, delete: if isAdmin() || (isSignedIn() && request.auth.uid == resource.data.authorId);
    }

    match /monthlyReports/{reportId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update, delete: if isAdmin() || (isSignedIn() && request.auth.uid == resource.data.authorId);
    }

    match /system/metadata {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    // --- DEFAULT DENY / ADMIN OVERRIDE ---
    match /{document=**} {
      allow read, write: if isAdmin();
    }
  }
}