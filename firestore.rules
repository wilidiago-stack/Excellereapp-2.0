rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write access for any authenticated user.
    // This is a standard rule for development phase, allowing you to build
    // features without permission errors. We will implement stricter,
    // role-based rules later for production security.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
