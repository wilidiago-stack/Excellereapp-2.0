rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isOneOfRoles(roles) {
      // The 'in' operator on a list checks for an index, not a value.
      // By using a map, 'in' correctly checks for key existence.
      return request.auth.token.role in roles;
    }
    
    match /users/{userId} {
      allow create: if request.auth.uid == userId 
                      && !('role' in request.resource.data);

      allow get: if request.auth.uid == userId || isOneOfRoles({'admin': true});

      allow update: if (request.auth.uid == userId && (!('role' in request.resource.data) || request.resource.data.role == resource.data.role))
                      || isOneOfRoles({'admin': true});
      
      allow delete: if isOneOfRoles({'admin': true});
    }

    match /users {
      allow list: if isOneOfRoles({'admin': true});
    }

    match /system/{docId} {
        allow get: if request.auth != null;
        allow list, write: if false;
    }

    // Rules for data collections
    match /projects/{projectId} {
      allow get: if request.auth != null;
      allow write: if isOneOfRoles({'admin': true, 'project_manager': true});
    }
    match /projects {
      allow list: if isOneOfRoles({'admin': true, 'project_manager': true});
    }

    match /contractors/{contractorId} {
      allow get: if request.auth != null;
      allow write: if isOneOfRoles({'admin': true, 'project_manager': true});
    }
     match /contractors {
      allow list: if isOneOfRoles({'admin': true, 'project_manager': true});
    }

    match /dailyReports/{reportId} {
      allow get: if request.auth != null;
      allow write: if isOneOfRoles({'admin': true, 'project_manager': true});
    }
    match /dailyReports {
      allow list: if isOneOfRoles({'admin': true, 'project_manager': true});
    }

    match /monthlyReports/{reportId} {
      allow get: if request.auth != null;
      allow write: if isOneOfRoles({'admin': true, 'project_manager': true});
    }
    match /monthlyReports {
      allow list: if isOneOfRoles({'admin': true, 'project_manager': true});
    }
  }
}
