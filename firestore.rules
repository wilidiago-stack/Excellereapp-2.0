
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- HELPER FUNCTIONS ---

    function isSignedIn() {
      return request.auth != null;
    }

    // Robust Admin Validation: Direct check for developer email and UID
    function isAdmin() {
      return isSignedIn() && (
        (request.auth.token.email != null && request.auth.token.email.lower() == "andres.diago@outlook.com") || 
        request.auth.uid == "aPu3ZeoGaCY6MDxPk9wFFqwDZU33" ||
        request.auth.token.role == "admin"
      );
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // --- COLLECTION RULES ---

    match /time_entries/{entryId} {
      // Allow read/list if admin OR if document belongs to the user
      allow read: if isSignedIn() && (isAdmin() || (resource != null && resource.data.userId == request.auth.uid));
      
      // Allow creation only for own entries
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      
      // Allow update/delete if admin or owner
      allow update, delete: if isSignedIn() && (isAdmin() || (resource != null && resource.data.userId == request.auth.uid));
    }

    match /weekly_submissions/{submissionId} {
      allow read: if isSignedIn() && (isAdmin() || submissionId.startsWith(request.auth.uid));
      allow create, update: if isSignedIn() && (isAdmin() || submissionId.startsWith(request.auth.uid));
    }

    match /projects/{projectId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /users/{userId} {
      allow read: if isSignedIn();
      allow write: if isAdmin() || isOwner(userId);
    }

    match /contractors/{contractorId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /system/metadata {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    // Global fallback for Admin supreme access
    match /{document=**} {
      allow read, write: if isAdmin();
    }
  }
}
