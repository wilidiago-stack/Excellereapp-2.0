rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function hasRole(roleName) {
      return isSignedIn() && getUserData().role == roleName;
    }

    function isAdmin() {
      return hasRole('admin') || 
             (isSignedIn() && request.auth.token.email == 'andres.diago@outlook.com');
    }

    function isManager() {
      return hasRole('project_manager');
    }

    function canWrite() {
      return isAdmin() || isManager();
    }

    match /system/metadata {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /quick_links/{linkId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /users/{userId} {
      allow get: if isSignedIn() && (request.auth.uid == userId || isAdmin());
      allow list: if isAdmin() || isManager();
      allow create: if isAdmin();
      allow update: if isAdmin() || (request.auth.uid == userId);
      allow delete: if isAdmin();
    }

    match /projects/{docId} {
      allow read: if isSignedIn();
      allow write: if canWrite();
      match /{allSubpaths=**} {
        allow read: if isSignedIn();
        allow write: if canWrite();
      }
    }

    match /contractors/{docId} {
      allow read: if isSignedIn();
      allow write: if canWrite();
    }

    match /dailyReports/{docId} {
      allow read: if isSignedIn();
      allow write: if canWrite();
    }

    match /monthlyReports/{docId} {
      allow read: if isSignedIn();
      allow write: if canWrite();
    }

    match /safetyEvents/{docId} {
      allow read: if isSignedIn();
      allow write: if canWrite();
    }

    match /time_entries/{entryId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update, delete: if canWrite() || (resource.data.userId == request.auth.uid);
    }

    match /weekly_submissions/{submissionId} {
      allow read: if isSignedIn();
      // Updated rule to use resource.data.userId instead of startsWith on document ID
      allow create: if canWrite() || (isSignedIn() && request.resource.data.userId == request.auth.uid);
      allow update, delete: if canWrite() || (isSignedIn() && resource.data.userId == request.auth.uid);
    }

    match /calendar_notes/{noteId} {
      allow read: if isSignedIn();
      allow write: if canWrite();
    }
  }
}
