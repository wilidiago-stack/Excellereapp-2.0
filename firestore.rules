rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    match /users/{userId} {
      // CREATE: A user can create their own document, but CANNOT assign their own role.
      // The role must be 'pending_role' which a Cloud Function will then update.
      allow create: if request.auth.uid == userId 
                      && request.resource.data.role == 'pending_role';

      // READ: An admin or the user themselves can read the profile.
      allow get: if request.auth.uid == userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';

      // UPDATE: A user can update their own profile, but CANNOT change their role.
      // An admin can update any profile, including the role.
      allow update: if (request.auth.uid == userId && request.resource.data.role == resource.data.role)
                      || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      
      // DELETE: Only admins can delete users.
      allow delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    match /users {
      // LIST: Only admins can list all users.
      allow list: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // System metadata is only accessible by backend services (Cloud Functions).
    match /system/{docId} {
        allow read, write: if false;
    }

    match /projects/{projectId} {
      allow get: if request.auth != null;
      allow write: if request.auth != null;
    }
    match /projects {
      allow list: if request.auth != null;
    }

    match /contractors/{contractorId} {
      allow get: if request.auth != null;
      allow write: if request.auth != null;
    }
     match /contractors {
      allow list: if request.auth != null;
    }

    match /dailyReports/{reportId} {
      allow get: if request.auth != null;
      allow write: if request.auth != null;
    }
    match /dailyReports {
      allow list: if request.auth != null;
    }

    match /monthlyReports/{reportId} {
      allow get: if request.auth != null;
      allow write: if request.auth != null;
    }
    match /monthlyReports {
      allow list: if request.auth != null;
    }
  }
}
