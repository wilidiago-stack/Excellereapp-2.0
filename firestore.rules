rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * Core Philosophy: Access control is based on authentication state, 
     * specific document ownership, and custom role-based claims.
     */

    // --- Helper Functions ---

    function isSignedIn() {
      return request.auth != null;
    }

    /** Checks if the user has the 'admin' role in their custom claims. */
    function isAdmin() {
      return isSignedIn() && request.auth.token.role == 'admin';
    }

    /** Checks if the authenticated user's UID matches the provided userId. */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // --- Collection Rules ---

    /**
     * System metadata is readable by all authenticated users to show total stats.
     */
    match /system/metadata {
      allow read: if isSignedIn();
      allow write: if false; // Managed by Cloud Functions
    }

    /**
     * Users can always read and update their own profiles.
     * Administrators can manage all profiles.
     */
    match /users/{userId} {
      allow get: if isOwner(userId) || isAdmin();
      allow list: if isAdmin();
      allow create: if isSignedIn(); 
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();
    }

    /**
     * Projects are visible to all internal staff.
     * Creation and management is restricted to authenticated users.
     */
    match /projects/{projectId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if isSignedIn() && (resource.data.ownerId == request.auth.uid || isAdmin());
      allow delete: if isAdmin();

      /** Subcollection for documents. Inherits project-level read access. */
      match /documents/{documentId} {
        allow read, write: if isSignedIn();
      }
    }

    /**
     * Site records and operational logs.
     */
    match /contractors/{contractorId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn();
    }

    match /dailyReports/{reportId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update, delete: if isAdmin() || (resource != null && resource.data.authorId == request.auth.uid);
    }

    match /monthlyReports/{reportId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update, delete: if isAdmin() || (resource != null && resource.data.authorId == request.auth.uid);
    }

    match /safetyEvents/{eventId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update, delete: if isAdmin() || (resource != null && resource.data.authorId == request.auth.uid);
    }

    /**
     * Time tracking entries. Users manage their own time. 
     * Admins can view and manage everyone's time for payroll/approval.
     */
    match /time_entries/{entryId} {
      allow read: if isAdmin() || (resource != null && resource.data.userId == request.auth.uid);
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAdmin() || (resource != null && resource.data.userId == request.auth.uid);
    }

    match /weekly_submissions/{submissionId} {
      allow read: if isAdmin() || (resource != null && resource.data.userId == request.auth.uid);
      allow write: if isAdmin() || (isSignedIn() && (submissionId.startsWith(request.auth.uid)));
    }

    // Compatibility for legacy frontend versions
    match /user_profiles/{userId} {
      allow read, write: if isOwner(userId) || isAdmin();
    }
  }
}
