rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Rule for the 'users' collection
    match /users/{userId} {
      // CREATE: A user can create their own document upon signing up.
      allow create: if request.auth.uid == userId;

      // READ (single doc): An admin or the user themselves can read the profile.
      allow get: if request.auth.uid == userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';

      // UPDATE: A user can update their own profile, or an admin can update any profile.
      allow update: if request.auth.uid == userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      
      // DELETE: Only admins can delete users.
      allow delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    // Rule for LISTING the 'users' collection - only admins can list all users.
    match /users {
      allow list: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Rules for system metadata, used for first user admin assignment
    match /system/metadata {
        // Allow any authenticated user to read the metadata (needed for the signup transaction)
        allow get: if request.auth != null;
        // Allow an authenticated user to write to the metadata (as part of the signup transaction)
        allow write: if request.auth != null;
    }

    match /projects/{projectId} {
      allow get: if request.auth != null;
      allow write: if request.auth != null;
    }
    match /projects {
      allow list: if request.auth != null;
    }

    match /contractors/{contractorId} {
      allow get: if request.auth != null;
      allow write: if request.auth != null;
    }
     match /contractors {
      allow list: if request.auth != null;
    }

    match /dailyReports/{reportId} {
      allow get: if request.auth != null;
      allow write: if request.auth != null;
    }
    match /dailyReports {
      allow list: if request.auth != null;
    }

    match /monthlyReports/{reportId} {
      allow get: if request.auth != null;
      allow write: if request.auth != null;
    }
    match /monthlyReports {
      allow list: if request.auth != null;
    }
  }
}
