rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * Core Philosophy: This ruleset implements a strict ownership and role-based access model 
     * while maintaining flexibility for rapid prototyping. Authorization is decentralized 
     * and independent, relying on custom claims and ownership fields.
     */

    // --- Helper Functions ---

    /** Checks if the request is from an authenticated user. */
    function isSignedIn() {
      return request.auth != null;
    }

    /** Checks if the user has the 'admin' role in their custom claims. */
    function isAdmin() {
      return isSignedIn() && request.auth.token.role == 'admin';
    }

    /** Checks if the authenticated user's UID matches the provided userId. */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // --- Collection Rules ---

    /**
     * @description Rules for the System collection.
     * @path /system/metadata
     */
    match /system/metadata {
      allow read: if isSignedIn();
      allow write: if false; // Only modified via Cloud Functions
    }

    /**
     * @description Rules for the Users collection.
     * @path /users/{userId}
     */
    match /users/{userId} {
      allow get: if isOwner(userId) || isAdmin();
      allow list: if isAdmin();
      allow create: if isSignedIn(); 
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();
    }

    /**
     * @description Rules for the Projects collection.
     * @path /projects/{projectId}
     */
    match /projects/{projectId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if isSignedIn() && (resource.data.ownerId == request.auth.uid || isAdmin());
      allow delete: if isAdmin();

      /** Documents subcollection */
      match /documents/{documentId} {
        allow read, write: if isSignedIn();
      }
    }

    /**
     * @description Rules for the Contractors collection.
     * @path /contractors/{contractorId}
     */
    match /contractors/{contractorId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn();
    }

    /**
     * @description Rules for the Daily Reports collection.
     * @path /dailyReports/{reportId}
     */
    match /dailyReports/{reportId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update, delete: if isAdmin() || (resource != null && resource.data.authorId == request.auth.uid);
    }

    /**
     * @description Rules for the Monthly Reports collection.
     * @path /monthlyReports/{reportId}
     */
    match /monthlyReports/{reportId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update, delete: if isAdmin() || (resource != null && resource.data.authorId == request.auth.uid);
    }

    /**
     * @description Rules for the Safety Events collection.
     * @path /safetyEvents/{eventId}
     */
    match /safetyEvents/{eventId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update, delete: if isAdmin() || (resource != null && resource.data.authorId == request.auth.uid);
    }

    /**
     * @description Rules for Time Entries.
     * @path /time_entries/{entryId}
     */
    match /time_entries/{entryId} {
      allow read: if isAdmin() || (resource != null && resource.data.userId == request.auth.uid);
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAdmin() || (resource != null && resource.data.userId == request.auth.uid);
    }

    /**
     * @description Rules for Weekly Submissions.
     * @path /weekly_submissions/{submissionId}
     */
    match /weekly_submissions/{submissionId} {
      allow read: if isAdmin() || (resource != null && resource.data.userId == request.auth.uid);
      allow write: if isAdmin() || (isSignedIn() && (submissionId.startsWith(request.auth.uid)));
    }

    // --- Legacy / Compatibility ---
    match /user_profiles/{userId} {
      allow read, write: if isOwner(userId) || isAdmin();
    }
    match /roles/{roleId} {
      allow get, list: if isSignedIn();
    }
    match /modules/{moduleId} {
      allow get, list: if isSignedIn();
    }
  }
}