rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    match /users/{userId} {
      // Allow user document creation only if the user is creating their own document.
      // This is a secure pattern for the sign-up flow.
      allow create: if request.auth.uid == userId;

      // Allow any authenticated user to read user lists or individual profiles.
      allow list, get: if request.auth != null;

      // Allow users to update their own profile, or an admin to update any profile.
      // Note: This requires the 'role' field to be correctly set in user documents.
      allow update: if request.auth.uid == userId || 
                      get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      
      // Only admins can delete users.
      allow delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    match /projects/{projectId} {
      allow get, write: if request.auth != null;
    }
    match /projects {
      allow list: if request.auth != null;
    }

    match /contractors/{contractorId} {
      allow get, write: if request.auth != null;
    }
     match /contractors {
      allow list: if request.auth != null;
    }

    match /dailyReports/{reportId} {
      allow get, write: if request.auth != null;
    }
    match /dailyReports {
      allow list: if request.auth != null;
    }

    match /monthlyReports/{reportId} {
      allow get, write: if request.auth != null;
    }
    match /monthlyReports {
      allow list: if request.auth != null;
    }
  }
}
