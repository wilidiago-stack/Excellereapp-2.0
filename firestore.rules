rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isOneOfRoles(roles) {
      return request.auth.token.role in roles;
    }
    
    match /users/{userId} {
      allow create: if request.auth.uid == userId 
                      && !('role' in request.resource.data);

      allow get: if request.auth.uid == userId || isOneOfRoles(['admin']);

      allow update: if (request.auth.uid == userId && (!('role' in request.resource.data) || request.resource.data.role == resource.data.role))
                      || isOneOfRoles(['admin']);
      
      allow delete: if isOneOfRoles(['admin']);
    }

    match /users {
      allow list: if isOneOfRoles(['admin']);
    }

    match /system/{docId} {
        allow get: if request.auth != null;
        allow list, write: if false;
    }

    // Rules for data collections
    match /projects/{projectId} {
      allow get: if request.auth != null;
      allow write: if isOneOfRoles(['admin', 'project_manager']);
    }
    match /projects {
      allow list: if isOneOfRoles(['admin', 'project_manager']);
    }

    match /contractors/{contractorId} {
      allow get: if request.auth != null;
      allow write: if isOneOfRoles(['admin', 'project_manager']);
    }
     match /contractors {
      allow list: if isOneOfRoles(['admin', 'project_manager']);
    }

    match /dailyReports/{reportId} {
      allow get: if request.auth != null;
      allow write: if isOneOfRoles(['admin', 'project_manager']);
    }
    match /dailyReports {
      allow list: if isOneOfRoles(['admin', 'project_manager']);
    }

    match /monthlyReports/{reportId} {
      allow get: if request.auth != null;
      allow write: if isOneOfRoles(['admin', 'project_manager']);
    }
    match /monthlyReports {
      allow list: if isOneOfRoles(['admin', 'project_manager']);
    }
  }
}
