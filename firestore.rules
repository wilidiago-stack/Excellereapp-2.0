rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      // Allow authenticated users to create and read users.
      // For a production app, you might want more granular rules.
      allow read, create: if request.auth != null;
    }

    match /contractors/{contractorId} {
      // Allow authenticated users to create and read contractors.
      allow read, create: if request.auth != null;
    }

    match /projects/{projectId}/dailyReports/{reportId} {
      // Allow authenticated users to create and read reports.
      allow read, create: if request.auth != null;
    }

    // Fallback rule to deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
