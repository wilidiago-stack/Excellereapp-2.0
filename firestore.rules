rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * Helper functions for role-based access control.
     * Roles are stored in the authentication token claims.
     */

    function isSignedIn() {
      return request.auth != null;
    }

    function hasRole(role) {
      return isSignedIn() && request.auth.token.role == role;
    }

    function isAdmin() {
      return hasRole('admin');
    }

    function isManager() {
      return hasRole('project_manager');
    }

    /** Total access for Admin and Project Manager */
    function canWrite() {
      return isAdmin() || isManager();
    }

    // --- Collection Rules ---

    /**
     * System metadata is readable by all authenticated users.
     */
    match /system/metadata {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    /**
     * Users management.
     * Users can read their own profile.
     * Only admins can manage the full directory.
     */
    match /users/{userId} {
      allow get: if isSignedIn() && (request.auth.uid == userId || isAdmin());
      allow list: if isAdmin() || isManager();
      allow create: if isAdmin();
      allow update: if isAdmin() || (request.auth.uid == userId);
      allow delete: if isAdmin();
    }

    /**
     * Projects and Sub-resources (Daily Reports, Monthly Reports, Safety Events, Contractors).
     * Admin & PM: Full Control.
     * Viewer: Read Only.
     */
    
    // Generic rule for operative collections
    match /{collectionName}/{docId} {
      allow read: if isSignedIn();
      allow write: if canWrite();
      
      // Allow recursive access for subcollections like /projects/{id}/documents/{doc}
      match /{allSubpaths=**} {
        allow read: if isSignedIn();
        allow write: if canWrite();
      }
    }

    /** Specific paths for clarity and additional constraints */
    
    match /projects/{projectId} {
      allow read: if isSignedIn();
      allow write: if canWrite();

      match /documents/{documentId} {
        allow read: if isSignedIn();
        allow write: if canWrite();
      }
    }

    match /dailyReports/{reportId} {
      allow read: if isSignedIn();
      allow write: if canWrite();
    }

    match /monthlyReports/{reportId} {
      allow read: if isSignedIn();
      allow write: if canWrite();
    }

    match /safetyEvents/{eventId} {
      allow read: if isSignedIn();
      allow write: if canWrite();
    }

    match /contractors/{contractorId} {
      allow read: if isSignedIn();
      allow write: if canWrite();
    }

    match /time_entries/{entryId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn(); // All users log hours
      allow update, delete: if canWrite() || (resource.data.userId == request.auth.uid);
    }

    match /weekly_submissions/{submissionId} {
      allow read: if isSignedIn();
      allow write: if canWrite() || submissionId.startsWith(request.auth.uid);
    }
  }
}