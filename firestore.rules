rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- HELPER FUNCTIONS ---

    function isSignedIn() {
      return request.auth != null;
    }

    // Explicitly targeting the system owner for absolute access.
    function isAdmin() {
      return isSignedIn() && (
        request.auth.token.email.lower() == 'andres.diago@outlook.com' || 
        request.auth.uid == 'aPu3ZeoGaCY6MDxPk9wFFqwDZU33' ||
        (request.auth.token.role != null && request.auth.token.role == 'admin')
      );
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // --- COLLECTION RULES ---

    match /time_entries/{entryId} {
      // Admin has full access to list and manage all entries
      allow read, write: if isAdmin();
      
      // Regular users can only see and manage their own entries
      // Note: 'list' operations REQUIRE a filter where('userId', '==', request.auth.uid)
      allow read: if isSignedIn() && (resource == null || resource.data.userId == request.auth.uid);
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }

    match /projects/{projectId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /users/{userId} {
      allow read: if isSignedIn();
      allow write: if isAdmin() || isOwner(userId);
    }

    match /contractors/{contractorId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /dailyReports/{reportId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update, delete: if isAdmin() || (isSignedIn() && request.auth.uid == resource.data.authorId);
    }

    match /monthlyReports/{reportId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update, delete: if isAdmin() || (isSignedIn() && request.auth.uid == resource.data.authorId);
    }

    match /system/metadata {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    // Catch-all for other collections
    match /{document=**} {
      allow read, write: if isAdmin();
    }
  }
}
// Force Rule Update for andres.diago@outlook.com permissions sync.
