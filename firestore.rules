rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * EXCELLERE REVIVE - REGLAS DE SEGURIDAD ROBUSTAS (Firestore-First)
     */

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /** 
     * Verifica privilegios administrativos consultando directamente la colección de usuarios.
     * Esto garantiza que el rol asignado en el módulo 'Users' sea la fuente de verdad.
     */
    function isAdmin() {
      return isSignedIn() && (
        request.auth.token.role == 'admin' || 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'
      );
    }

    /** Metadatos del sistema (Estadísticas del Dashboard) */
    match /system/metadata {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    /** Perfiles de Usuario */
    match /users/{userId} {
      allow get: if isSignedIn();
      allow list: if isAdmin();
      allow create: if isSignedIn();
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();
    }

    /** Proyectos, Contratistas y Reportes */
    match /projects/{id} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
    
    match /contractors/{id} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
    
    match /dailyReports/{id} {
      allow read: if isSignedIn();
      allow create, update: if isSignedIn();
      allow delete: if isAdmin();
    }
    
    match /monthlyReports/{id} {
      allow read: if isSignedIn();
      allow create, update: if isSignedIn();
      allow delete: if isAdmin();
    }

    /** Marcadores de Seguridad */
    match /system_roles_admin/{adminUid} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    /** Roles y Módulos */
    match /roles/{id} { allow read: if isSignedIn(); allow write: if isAdmin(); }
    match /modules/{id} { allow read: if isSignedIn(); allow write: if isAdmin(); }
  }
}