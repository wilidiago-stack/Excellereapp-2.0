rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- FUNCIONES HELPER ---

    function isSignedIn() {
      return request.auth != null;
    }

    // Validación de Administrador robusta basada en correo
    // v4.0.0 - Forzando despliegue de privilegios para andres.diago@outlook.com
    function isAdmin() {
      return isSignedIn() && (
        request.auth.token.email == 'andres.diago@outlook.com' || 
        request.auth.token.role == 'admin'
      );
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // --- REGLAS DE COLECCIONES ---

    match /time_entries/{entryId} {
      // Permitir lectura si es Admin o si el documento pertenece al usuario
      // Se añade soporte explícito para 'list'
      allow read: if isSignedIn() && (isAdmin() || resource.data.userId == request.auth.uid);
      
      // Permitir creación/escritura si el usuario es el dueño o Admin
      allow create: if isSignedIn() && (request.resource.data.userId == request.auth.uid || isAdmin());
      allow update, delete: if isSignedIn() && (isAdmin() || resource.data.userId == request.auth.uid);
    }

    match /projects/{projectId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /users/{userId} {
      allow read: if isSignedIn();
      allow write: if isAdmin() || isOwner(userId);
    }

    match /contractors/{contractorId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /dailyReports/{reportId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update, delete: if isAdmin() || (isSignedIn() && request.auth.uid == resource.data.authorId);
    }

    match /monthlyReports/{reportId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update, delete: if isAdmin() || (isSignedIn() && request.auth.uid == resource.data.authorId);
    }

    match /system/metadata {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    // Denegación por defecto para cualquier otra ruta no especificada
    match /{document=**} {
      allow read, write: if isAdmin();
    }
  }
}