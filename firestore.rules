rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- FUNCIONES HELPER ---

    function isSignedIn() {
      return request.auth != null;
    }

    // Validación de Administrador reforzada
    function isAdmin() {
      return isSignedIn() && (
        request.auth.token.email.lower() == 'andres.diago@outlook.com' || 
        (request.auth.token.role != null && request.auth.token.role == 'admin')
      );
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // --- REGLAS DE COLECCIONES ---

    match /time_entries/{entryId} {
      // Se permite list y get si es Admin o si son sus propios datos
      allow read: if isSignedIn() && (isAdmin() || resource.data.userId == request.auth.uid);
      
      // Permitir creación/escritura si el usuario es el dueño o Admin
      allow create: if isSignedIn() && (request.resource.data.userId == request.auth.uid || isAdmin());
      allow update, delete: if isSignedIn() && (isAdmin() || resource.data.userId == request.auth.uid);
    }

    match /projects/{projectId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /users/{userId} {
      allow read: if isSignedIn();
      allow write: if isAdmin() || isOwner(userId);
    }

    match /contractors/{contractorId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /dailyReports/{reportId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update, delete: if isAdmin() || (isSignedIn() && request.auth.uid == resource.data.authorId);
    }

    match /monthlyReports/{reportId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update, delete: if isAdmin() || (isSignedIn() && request.auth.uid == resource.data.authorId);
    }

    match /system/metadata {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    // Acceso total para Administradores en cualquier otra ruta
    match /{document=**} {
      allow read, write: if isAdmin();
    }
  }
}