rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Default deny all access unless explicitly allowed
    match /{document=**} {
      allow read, write: if false;
    }

    // Rules for /users/{userId}
    match /users/{userId} {
      // CREATE:
      // 1. A new user can create their own profile during sign-up, but cannot set their own role.
      // 2. An admin can create a new user (and can set a role).
      allow create: if (request.auth.uid == userId && !('role' in request.resource.data))
                      || request.auth.token.role == 'admin';

      // READ:
      // 1. A user can read their own profile.
      // 2. An admin can read any profile.
      allow get: if request.auth.uid == userId || request.auth.token.role == 'admin';

      // An admin can list all users.
      allow list: if request.auth.token.role == 'admin';

      // UPDATE:
      // 1. A user can update their own profile, but cannot change their own role.
      // 2. An admin can update any profile, including changing the role.
      allow update: if (request.auth.uid == userId && request.resource.data.role == resource.data.role)
                      || request.auth.token.role == 'admin';

      // DELETE: Only an admin can delete a user.
      allow delete: if request.auth.token.role == 'admin';
    }

    // Rules for /system/{docId}
    match /system/{docId} {
      // READ: Any authenticated user with a valid role can read system metadata.
      allow get: if request.auth.token.role in ['admin', 'project_manager', 'viewer'];
      // WRITE: Deny all client-side writes.
      allow write: if false;
    }

    // Rules for the main data collections
    match /{collection}/{docId} where collection in ['projects', 'contractors', 'dailyReports', 'monthlyReports'] {
        // READ access for all valid roles
        allow get, list: if request.auth.token.role in ['admin', 'project_manager', 'viewer'];
        // WRITE access only for admins and project managers
        allow create, update, delete: if request.auth.token.role in ['admin', 'project_manager'];
    }
  }
}
