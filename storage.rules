rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    /**
     * Función básica para verificar si el usuario tiene una sesión activa.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * VERIFICACIÓN DE TOKEN:
     * Esta función extrae el rol directamente del Token de Identificación (JWT)
     * verificado por los servidores de Google. No puede ser falsificado.
     */
    function hasRole(roleName) {
      return isSignedIn() && request.auth.token.role == roleName;
    }

    function isAdmin() {
      return hasRole('admin');
    }

    function isManager() {
      return hasRole('project_manager');
    }

    /** 
     * Solo permite escribir (subir/borrar) si el token contiene 
     * el sello de Administrador o Project Manager.
     */
    function canWrite() {
      return isAdmin() || isManager();
    }

    match /{allPaths=**} {
      /** Lectura permitida para todo el personal autenticado (incluye Viewers) */
      allow read: if isSignedIn();
      
      /** Escritura restringida estrictamente a roles verificados en el Token */
      allow write: if canWrite();
    }
  }
}