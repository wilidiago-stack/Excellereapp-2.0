rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    /** Verifica si el usuario tiene una sesión activa */
    function isSignedIn() {
      return request.auth != null;
    }

    /** Valida el rol desde los Custom Claims del Token */
    function getRole() {
      return request.auth.token.role;
    }

    function isAdmin() {
      return isSignedIn() && getRole() == 'admin';
    }

    function isManager() {
      return isSignedIn() && getRole() == 'project_manager';
    }

    /** Lógica de permisos por rol solicitada:
     *  - Admin y PM: Full Access (subir, borrar, mirar)
     *  - Viewer: Read Only (solo mirar)
     */
    match /projects/{projectId}/{allPaths=**} {
      // Todos los usuarios autenticados pueden ver (incluye Viewers)
      allow read: if isSignedIn();
      
      // Solo Admin y Project Manager pueden subir o borrar
      allow write, delete: if isAdmin() || isManager();
    }

    /** Fallback de seguridad global */
    match /{allPaths=**} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
  }
}