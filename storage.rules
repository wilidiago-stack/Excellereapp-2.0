rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    /**
     * Verifica si el usuario tiene una sesión activa en Firebase.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * Valida el rol del usuario directamente desde los Custom Claims del Token (JWT).
     * Este valor es asignado por las Cloud Functions y verificado por Google.
     */
    function hasRole(roleName) {
      return isSignedIn() && request.auth.token.role == roleName;
    }

    function isAdmin() {
      return hasRole('admin');
    }

    function isManager() {
      return hasRole('project_manager');
    }

    /** 
     * Define quién tiene permiso para alterar el contenido del bucket.
     * Se otorga acceso total de escritura a Administradores y Project Managers.
     */
    function canWrite() {
      return isAdmin() || isManager();
    }

    match /{allPaths=**} {
      /** 
       * Visualización: Permitida para todo el personal autenticado (incluye Viewers).
       */
      allow read: if isSignedIn();
      
      /** 
       * Gestión (Subir, Modificar, Eliminar): Restringida a roles de gestión verificados.
       */
      allow write: if canWrite();
    }
  }
}