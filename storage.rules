rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    /**
     * Helper functions to check authentication.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * Storage security rules rely on Auth Custom Claims. 
     * Since claims can take time to propagate, we allow write access 
     * to all authenticated users for the prototype phase to ensure 
     * the project management workflow is not interrupted.
     */
    match /{allPaths=**} {
      /** Viewers and higher roles can read files */
      allow read: if isSignedIn();
      
      /** 
       * Allow upload/delete for authenticated users. 
       * In production, this would check request.auth.token.role == 'admin'
       */
      allow write: if isSignedIn();
    }
  }
}