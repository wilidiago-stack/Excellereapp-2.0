rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    /**
     * Helper functions for verified authentication.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * Token Verification:
     * Firebase Storage rules depend on verified Custom Claims.
     */
    function hasRole(roleName) {
      return isSignedIn() && request.auth.token.role == roleName;
    }

    function isAdmin() {
      return hasRole('admin');
    }

    function isManager() {
      return hasRole('project_manager');
    }

    /** Write access only for Admin and PM */
    function canWrite() {
      return isAdmin() || isManager();
    }

    match /{allPaths=**} {
      /** Any authenticated user can read (Viewers included) */
      allow read: if isSignedIn();
      
      /** 
       * Only users with verified Admin or PM roles in their TOKEN 
       * can upload or delete.
       */
      allow write: if canWrite();
    }
  }
}
