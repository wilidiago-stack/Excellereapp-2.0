rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    /** Verifica si el usuario tiene una sesión activa */
    function isSignedIn() {
      return request.auth != null;
    }

    /** Valida el rol desde los Custom Claims del Token */
    function getRole() {
      return request.auth.token.role;
    }

    function isAdmin() {
      return isSignedIn() && getRole() == 'admin';
    }

    function isManager() {
      return isSignedIn() && getRole() == 'project_manager';
    }

    /** Verifica si el proyecto está en la lista de permitidos del token */
    function isAssignedToProject(projectId) {
      return isSignedIn() && (
        isAdmin() || 
        (request.auth.token.assignedProjects != null && 
         projectId in request.auth.token.assignedProjects)
      );
    }

    /** Reglas granulares por proyecto */
    match /projects/{projectId}/{allPaths=**} {
      // Lectura permitida si está asignado
      allow read: if isAssignedToProject(projectId);
      
      // Escritura permitida para Admin o PM asignado
      allow write: if isAdmin() || (isManager() && isAssignedToProject(projectId));
    }

    /** Fallback de seguridad global */
    match /{allPaths=**} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
  }
}
