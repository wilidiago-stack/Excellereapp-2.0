{
  "entities": {
    "user": {
      "title": "User",
      "description": "A user of the application",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "The user's name"
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address"
        }
      },
      "required": ["name", "email"]
    }
  },
  "auth": {
    "providers": ["google.com"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/user"
      },
      "description": "User profile information"
    }
  }
}
