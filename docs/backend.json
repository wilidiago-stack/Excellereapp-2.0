{
  "entities": {
    "TimeSheetEntry": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "TimeSheetEntry",
      "type": "object",
      "description": "Represents a single entry of time logged by a user. Moved to top-level for cross-user reporting.",
      "properties": {
        "userId": { "type": "string" },
        "projectId": { "type": "string" },
        "date": { "type": "string", "format": "date-time" },
        "hours": { "type": "number" },
        "description": { "type": "string" },
        "updatedAt": { "type": "string", "format": "date-time" }
      },
      "required": ["userId", "projectId", "date", "hours"]
    },
    "Project": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Project",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "companyName": { "type": "string" },
        "status": { "type": "string" }
      },
      "required": ["id", "name", "status"]
    },
    "UserProfile": {
      "title": "UserProfile",
      "type": "object",
      "properties": {
        "firstName": { "type": "string" },
        "lastName": { "type": "string" },
        "role": { "type": "string" },
        "assignedModules": { "type": "array", "items": { "type": "string" } }
      }
    }
  },
  "auth": {
    "providers": ["password", "google.com", "microsoft.com"]
  },
  "firestore": {
    "structure": [
      {
        "path": "/time_entries/{entryId}",
        "definition": {
          "entityName": "TimeSheetEntry",
          "schema": { "$ref": "#/backend/entities/TimeSheetEntry" },
          "description": "Consolidated time entries for all users. Enables efficient reporting and administration."
        }
      },
      {
        "path": "/projects/{projectId}",
        "definition": {
          "entityName": "Project",
          "schema": { "$ref": "#/backend/entities/Project" },
          "description": "Project data."
        }
      },
      {
        "path": "/users/{userId}",
        "definition": {
          "entityName": "UserProfile",
          "schema": { "$ref": "#/backend/entities/UserProfile" },
          "description": "Extended user profile information."
        }
      }
    ]
  }
}
