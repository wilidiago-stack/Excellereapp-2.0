
{
  "entities": {
    "TimeSheetEntry": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "TimeSheetEntry",
      "type": "object",
      "description": "Represents a single entry of time logged by a user. Stored at top-level for global reporting.",
      "properties": {
        "userId": { "type": "string" },
        "projectId": { "type": "string" },
        "date": { "type": "string", "format": "date-time" },
        "hours": { "type": "number" },
        "description": { "type": "string" },
        "updatedAt": { "type": "string", "format": "date-time" },
        "status": { "type": "string", "enum": ["draft", "submitted", "approved"] }
      },
      "required": ["userId", "projectId", "date", "hours"]
    },
    "WeeklySubmission": {
      "title": "WeeklySubmission",
      "type": "object",
      "description": "Control document to manage the submission and approval status of a user's entire week.",
      "properties": {
        "userId": { "type": "string" },
        "weekId": { "type": "string", "description": "Format: YYYY-WW" },
        "status": { "type": "string", "enum": ["draft", "submitted", "approved"] },
        "submittedAt": { "type": "string", "format": "date-time" },
        "approvedAt": { "type": "string", "format": "date-time" },
        "approvedBy": { "type": "string" }
      },
      "required": ["userId", "weekId", "status"]
    },
    "Project": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Project",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "companyName": { "type": "string" },
        "status": { "type": "string" }
      },
      "required": ["id", "name", "status"]
    },
    "UserProfile": {
      "title": "UserProfile",
      "type": "object",
      "properties": {
        "firstName": { "type": "string" },
        "lastName": { "type": "string" },
        "role": { "type": "string" },
        "assignedModules": { "type": "array", "items": { "type": "string" } },
        "pinnedShortcuts": { "type": "array", "items": { "type": "string" } }
      }
    },
    "Contractor": {
      "title": "Contractor",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "contactPerson": { "type": "string" },
        "status": { "type": "string", "enum": ["Active", "Inactive"] }
      },
      "required": ["name", "contactPerson", "status"]
    }
  },
  "auth": {
    "providers": ["password", "google.com", "microsoft.com"]
  },
  "firestore": {
    "structure": [
      {
        "path": "/time_entries/{entryId}",
        "definition": {
          "entityName": "TimeSheetEntry",
          "schema": { "$ref": "#/backend/entities/TimeSheetEntry" },
          "description": "Consolidated time entries for all users."
        }
      },
      {
        "path": "/weekly_submissions/{submissionId}",
        "definition": {
          "entityName": "WeeklySubmission",
          "schema": { "$ref": "#/backend/entities/WeeklySubmission" },
          "description": "Locks and status for weekly periods."
        }
      },
      {
        "path": "/projects/{projectId}",
        "definition": {
          "entityName": "Project",
          "schema": { "$ref": "#/backend/entities/Project" },
          "description": "Project data."
        }
      },
      {
        "path": "/users/{userId}",
        "definition": {
          "entityName": "UserProfile",
          "schema": { "$ref": "#/backend/entities/UserProfile" },
          "description": "Extended user profile information."
        }
      },
      {
        "path": "/contractors/{contractorId}",
        "definition": {
          "entityName": "Contractor",
          "schema": { "$ref": "#/backend/entities/Contractor" },
          "description": "Registered contractors."
        }
      }
    ]
  }
}
