{
  "entities": {
    "UserProfile": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "UserProfile",
      "type": "object",
      "description": "Represents a user within the application, storing their profile information and assigned roles.",
      "properties": {
        "id": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "firstName": { "type": "string" },
        "lastName": { "type": "string" },
        "role": { "type": "string", "enum": ["admin", "project_manager", "viewer"] },
        "status": { "type": "string", "enum": ["pending", "active", "invited", "rejected"] },
        "assignedModules": { "type": "array", "items": { "type": "string" } }
      },
      "required": ["id", "email", "firstName", "lastName", "role"]
    },
    "Role": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Role",
      "type": "object",
      "description": "Defines a security role and its granular permissions.",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "permissions": {
          "type": "object",
          "properties": {
            "create": { "type": "boolean" },
            "read": { "type": "boolean" },
            "update": { "type": "boolean" },
            "delete": { "type": "boolean" }
          }
        }
      },
      "required": ["id", "name"]
    }
  },
  "auth": {
    "providers": ["password", "google.com", "microsoft.com"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/backend/entities/UserProfile" },
      "description": "User profiles with role-based access control."
    },
    "/roles/{roleId}": {
      "schema": { "$ref": "#/backend/entities/Role" },
      "description": "Dynamic role definitions managed by administrators."
    },
    "/system_roles_admin/{adminUid}": {
      "schema": { "type": "object" },
      "description": "Security marker for high-performance admin checks."
    }
  }
}