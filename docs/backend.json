
{
  "entities": {
    "TimeSheetEntry": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "TimeSheetEntry",
      "type": "object",
      "description": "Represents a single entry of time logged by a user.",
      "properties": {
        "userId": { "type": "string" },
        "projectId": { "type": "string" },
        "date": { "type": "string", "format": "date-time" },
        "hours": { "type": "number" },
        "description": { "type": "string" },
        "updatedAt": { "type": "string", "format": "date-time" },
        "status": { "type": "string", "enum": ["draft", "submitted", "approved"] }
      },
      "required": ["userId", "projectId", "date", "hours"]
    },
    "WeeklySubmission": {
      "title": "WeeklySubmission",
      "type": "object",
      "description": "Control document to manage the submission and approval status of a user's entire week.",
      "properties": {
        "userId": { "type": "string" },
        "weekId": { "type": "string" },
        "status": { "type": "string", "enum": ["draft", "submitted", "approved"] },
        "submittedAt": { "type": "string", "format": "date-time" },
        "approvedAt": { "type": "string", "format": "date-time" },
        "approvedBy": { "type": "string" }
      },
      "required": ["userId", "weekId", "status"]
    },
    "Project": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Project",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "companyName": { "type": "string" },
        "status": { "type": "string" }
      },
      "required": ["id", "name", "status"]
    },
    "UserProfile": {
      "title": "UserProfile",
      "type": "object",
      "properties": {
        "firstName": { "type": "string" },
        "lastName": { "type": "string" },
        "role": { "type": "string" },
        "assignedModules": { "type": "array", "items": { "type": "string" } },
        "assignedProjects": { "type": "array", "items": { "type": "string" } },
        "pinnedShortcuts": { "type": "array", "items": { "type": "string" } }
      }
    },
    "Contractor": {
      "title": "Contractor",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "contactPerson": { "type": "string" },
        "status": { "type": "string", "enum": ["Active", "Inactive"] }
      },
      "required": ["name", "contactPerson", "status"]
    },
    "DailyReport": {
      "title": "DailyReport",
      "type": "object",
      "description": "Daily site operation and safety report.",
      "properties": {
        "date": { "type": "string", "format": "date-time" },
        "projectId": { "type": "string" },
        "authorId": { "type": "string" },
        "username": { "type": "string" },
        "shift": { "type": "string", "enum": ["Day", "Night"] },
        "weather": { "type": "object" },
        "safetyStats": { "type": "object" },
        "manHours": { "type": "array" },
        "dailyActivities": { "type": "array" },
        "notes": { "type": "array" }
      },
      "required": ["date", "projectId", "authorId", "shift"]
    },
    "MonthlyReport": {
      "title": "MonthlyReport",
      "type": "object",
      "description": "Monthly strategic summary report.",
      "properties": {
        "projectId": { "type": "string" },
        "month": { "type": "number" },
        "year": { "type": "number" },
        "summary": { "type": "string" },
        "authorId": { "type": "string" }
      },
      "required": ["projectId", "month", "year", "summary", "authorId"]
    },
    "SafetyEvent": {
      "title": "SafetyEvent",
      "type": "object",
      "description": "Safety related incidents, near misses or observations.",
      "properties": {
        "projectId": { "type": "string" },
        "date": { "type": "string", "format": "date-time" },
        "type": { "type": "string", "enum": ["Incident", "Near Miss", "Observation", "Safety Meeting", "Inspection"] },
        "severity": { "type": "string", "enum": ["Low", "Medium", "High", "Critical"] },
        "description": { "type": "string" },
        "location": { "type": "string" },
        "involvedPersonnel": { "type": "array", "items": { "type": "string" } },
        "correctiveActions": { "type": "string" },
        "status": { "type": "string", "enum": ["Open", "In Progress", "Closed"] },
        "authorId": { "type": "string" },
        "authorName": { "type": "string" },
        "updatedAt": { "type": "string", "format": "date-time" }
      },
      "required": ["projectId", "date", "type", "severity", "description", "status"]
    }
  },
  "auth": {
    "providers": ["password", "google.com", "microsoft.com"]
  },
  "firestore": {
    "structure": [
      {
        "path": "/time_entries/{entryId}",
        "definition": {
          "entityName": "TimeSheetEntry",
          "schema": { "$ref": "#/backend/entities/TimeSheetEntry" },
          "description": "Consolidated time entries."
        }
      },
      {
        "path": "/weekly_submissions/{submissionId}",
        "definition": {
          "entityName": "WeeklySubmission",
          "schema": { "$ref": "#/backend/entities/WeeklySubmission" },
          "description": "Weekly status."
        }
      },
      {
        "path": "/projects/{projectId}",
        "definition": {
          "entityName": "Project",
          "schema": { "$ref": "#/backend/entities/Project" },
          "description": "Project data."
        }
      },
      {
        "path": "/users/{userId}",
        "definition": {
          "entityName": "UserProfile",
          "schema": { "$ref": "#/backend/entities/UserProfile" },
          "description": "User profile."
        }
      },
      {
        "path": "/contractors/{contractorId}",
        "definition": {
          "entityName": "Contractor",
          "schema": { "$ref": "#/backend/entities/Contractor" },
          "description": "Contractors."
        }
      },
      {
        "path": "/dailyReports/{reportId}",
        "definition": {
          "entityName": "DailyReport",
          "schema": { "$ref": "#/backend/entities/DailyReport" },
          "description": "Daily site logs."
        }
      },
      {
        "path": "/monthlyReports/{reportId}",
        "definition": {
          "entityName": "MonthlyReport",
          "schema": { "$ref": "#/backend/entities/MonthlyReport" },
          "description": "Monthly summaries."
        }
      },
      {
        "path": "/safetyEvents/{eventId}",
        "definition": {
          "entityName": "SafetyEvent",
          "schema": { "$ref": "#/backend/entities/SafetyEvent" },
          "description": "Safety logs."
        }
      }
    ]
  }
}
