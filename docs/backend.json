
{
  "entities": {
    "UserProfile": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "UserProfile",
      "type": "object",
      "description": "Represents a user's profile and system permissions.",
      "properties": {
        "id": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "firstName": { "type": "string" },
        "lastName": { "type": "string" },
        "role": { 
          "type": "string", 
          "enum": ["admin", "project_manager", "viewer"],
          "description": "Determines system-wide access levels."
        },
        "assignedModules": { "type": "array", "items": { "type": "string" } },
        "assignedProjects": { "type": "array", "items": { "type": "string" } },
        "status": { "type": "string", "enum": ["active", "pending", "invited", "rejected"] }
      },
      "required": ["id", "email", "role"]
    },
    "QuickLink": {
      "title": "QuickLink",
      "type": "object",
      "properties": {
        "label": { "type": "string" },
        "url": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" },
        "projectId": { "type": "string" }
      },
      "required": ["label", "url"]
    }
  },
  "auth": {
    "providers": ["password", "google.com", "microsoft.com"],
    "roles": {
      "admin": "Total system control and user management.",
      "project_manager": "Total access to operative modules and document uploads.",
      "viewer": "Read-only access to authorized modules."
    }
  },
  "firestore": {
    "/system/metadata": { "schema": "object", "description": "Global counters and system state." },
    "/projects/{projectId}/quick_links/{linkId}": { "schema": "QuickLink", "description": "Project-specific dashboard buttons." },
    "/users/{userId}": { "schema": "UserProfile", "description": "User profile and permission set." },
    "/projects/{projectId}": { "schema": "object", "description": "Construction projects." },
    "/contractors/{contractorId}": { "schema": "object", "description": "Vendor directory." },
    "/dailyReports/{reportId}": { "schema": "object", "description": "Field operation logs." },
    "/safetyEvents/{eventId}": { "schema": "object", "description": "HSE incident and observation records." }
  }
}
