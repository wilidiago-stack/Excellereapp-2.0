{
  "entities": {
    "user": {
      "title": "User",
      "description": "A user of the application",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "The user's name"
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address"
        },
        "position": {
          "type": "string",
          "description": "The user's position"
        },
        "company": {
          "type": "string",
          "description": "The user's company"
        },
        "phoneNumber": {
          "type": "string",
          "description": "The user's phone number"
        },
        "assignedProjects": {
          "type": "array",
          "description": "An array of project IDs assigned to the user.",
          "items": {
            "type": "string"
          }
        },
        "role": {
          "type": "string",
          "description": "User role",
          "enum": [
            "admin",
            "project_manager",
            "viewer"
          ]
        }
      },
      "required": [
        "name",
        "email",
        "role"
      ]
    },
    "project": {
      "title": "Project",
      "description": "A project managed in the application",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "The name of the project"
        },
        "description": {
          "type": "string",
          "description": "A description of the project"
        },
        "startDate": {
          "type": "string",
          "format": "date",
          "description": "The start date of the project"
        },
        "endDate": {
          "type": "string",
          "format": "date",
          "description": "The end date of the project"
        }
      },
      "required": [
        "name",
        "startDate"
      ]
    },
    "contractor": {
      "title": "Contractor",
      "description": "A contractor or company working on projects",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "The name of the contractor's company"
        },
        "contactPerson": {
          "type": "string",
          "description": "The main contact person for the contractor"
        },
        "address": {
          "type": "string",
          "description": "The physical address of the contractor"
        },
        "services": {
          "type": "string",
          "description": "A description of services offered by the contractor"
        },
        "assignedProjects": {
          "type": "array",
          "description": "An array of project IDs assigned to the contractor.",
          "items": {
            "type": "string"
          }
        },
        "status": {
          "type": "string",
          "description": "The current status of the contractor",
          "enum": [
            "Active",
            "Inactive"
          ]
        }
      },
      "required": [
        "name",
        "contactPerson",
        "status"
      ]
    },
    "dailyReport": {
      "title": "Daily Report",
      "description": "A daily progress report for a project",
      "type": "object",
      "properties": {
        "date": {
          "type": "string",
          "format": "date",
          "description": "The date of the report"
        },
        "username": {
          "type": "string",
          "description": "The name of the user submitting the report"
        },
        "projectId": {
          "type": "string",
          "description": "ID of the project this report belongs to"
        },
        "shift": {
          "type": "string",
          "enum": [
            "Day",
            "Night"
          ]
        },
        "weather": {
          "type": "object",
          "properties": {
            "city": {
              "type": "string"
            },
            "conditions": {
              "type": "string"
            },
            "highTemp": {
              "type": "number"
            },
            "lowTemp": {
              "type": "number"
            },
            "wind": {
              "type": "number"
            }
          }
        },
        "safetyStats": {
          "type": "object",
          "properties": {
            "recordableIncidents": {
              "type": "integer"
            },
            "lightFirstAids": {
              "type": "integer"
            },
            "safetyMeeting": {
              "type": "integer"
            },
            "toolBoxTalks": {
              "type": "integer"
            },
            "admSiteOrientation": {
              "type": "integer"
            },
            "bbsGemba": {
              "type": "integer"
            },
            "operationsStandDowns": {
              "type": "integer"
            }
          }
        },
        "safetyActivities": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "activity": {
                "type": "string"
              },
              "needsAction": {
                "type": "boolean"
              },
              "notes": {
                "type": "string"
              },
              "status": {
                "type": "string"
              }
            }
          }
        },
        "manHours": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "contractorId": {
                "type": "string"
              },
              "headcount": {
                "type": "integer"
              },
              "hours": {
                "type": "number"
              }
            }
          }
        },
        "dailyActivities": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "contractorId": {
                "type": "string"
              },
              "activity": {
                "type": "string"
              },
              "location": {
                "type": "string"
              },
              "permits": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            }
          }
        },
        "notes": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "note": {
                "type": "string"
              },
              "status": {
                "type": "string"
              },
              "imageUrl": {
                "type": "string",
                "format": "uri"
              }
            }
          }
        },
        "authorId": {
          "type": "string",
          "description": "ID of the user who created the report"
        }
      },
      "required": [
        "date",
        "projectId",
        "authorId"
      ]
    },
    "monthlyReport": {
      "title": "Monthly Report",
      "description": "A monthly summary report for a project",
      "type": "object",
      "properties": {
        "month": {
          "type": "integer",
          "description": "The month of the report (1-12)"
        },
        "year": {
          "type": "integer",
          "description": "The year of the report"
        },
        "summary": {
          "type": "string",
          "description": "The summary of the monthly report"
        },
        "authorId": {
          "type": "string",
          "description": "ID of the user who created the report"
        },
        "projectId": {
          "type": "string",
          "description": "ID of the project this report belongs to"
        }
      },
      "required": [
        "month",
        "year",
        "summary",
        "authorId",
        "projectId"
      ]
    }
  },
  "auth": {
    "providers": [
      "google.com"
    ]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/user"
      },
      "description": "User profile information"
    },
    "/projects/{projectId}": {
      "schema": {
        "$ref": "#/entities/project"
      },
      "description": "Project documents"
    },
    "/contractors/{contractorId}": {
      "schema": {
        "$ref": "#/entities/contractor"
      },
      "description": "Contractor documents"
    },
    "/projects/{projectId}/dailyReports/{reportId}": {
      "schema": {
        "$ref": "#/entities/dailyReport"
      },
      "description": "Daily reports for a specific project"
    },
    "/projects/{projectId}/monthlyReports/{reportId}": {
      "schema": {
        "$ref": "#/entities/monthlyReport"
      },
      "description": "Monthly reports for a specific project"
    }
  }
}
