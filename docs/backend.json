{
  "entities": {
    "UserProfile": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "UserProfile",
      "type": "object",
      "description": "Represents a user's profile and system permissions.",
      "properties": {
        "id": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "firstName": { "type": "string" },
        "lastName": { "type": "string" },
        "role": { 
          "type": "string", 
          "enum": ["admin", "project_manager", "viewer"],
          "description": "Determines system-wide access levels."
        },
        "assignedModules": { "type": "array", "items": { "type": "string" } },
        "assignedProjects": { "type": "array", "items": { "type": "string" } },
        "status": { "type": "string", "enum": ["active", "pending", "invited", "rejected"] }
      },
      "required": ["id", "email", "role"]
    }
  },
  "auth": {
    "providers": ["password", "google.com", "microsoft.com"],
    "roles": {
      "admin": "Total system control and user management.",
      "project_manager": "Total access to operative modules and document uploads.",
      "viewer": "Read-only access to authorized modules."
    }
  },
  "firestore": {
    "rules_strategy": "RBAC (Role-Based Access Control) via Auth Custom Claims. Admin and Project Manager have Write/Delete access. Viewer is restricted to Read-Only."
  }
}